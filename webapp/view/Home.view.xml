<mvc:View
  controllerName="sap.ui.demo.walkthrough.controller.Home"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  displayBlock="true">

  <VBox
    class="sapUiSmallMargin"
    justifyContent="Center"
    alignItems="Center"
    width="100%"
    height="100%"
    renderType="Bare"
    >

    <Title
      text="Welcome!"
      level="H1"
      class="sapUiLargeMarginBottom"
    />
    <Text
      text="What would you like to do?"
      class="sapUiMediumMarginBottom"
    />

    <!-- Create New Form Button -->
    <Button
      text="Create New Form"
      press="onCreateForm"
      type="Emphasized"
      class="sapUiMediumMarginBottom"
      width="200px"
    />

    <!-- Edit Existing Form Section -->
    <HBox
  justifyContent="Center"
  alignItems="Center"
  width="400px"
  class="sapUiMediumMarginTop"
>
  <Select
    id="formSelect"
    change="onFormSelectChange"
    width="250px"
  >
    <items>
      <core:Item key="" text="-- Select a form --"/>
      <core:Item key="Form 1" text="Form 1"/>
      <core:Item key="Form 2" text="Form 2"/>
      <core:Item key="Form 3" text="Form 3"/>
    </items>
  </Select>

  <Button
    text="Edit Selected Form"
    press="onEditForm"
    type="Accept"
    width="120px"
    enabled="{= !!${/selectedForm} }"
    class="sapUiMediumMarginBegin"
  />
</HBox>

  </VBox>

</mvc:View>
